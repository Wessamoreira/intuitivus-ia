# Configurações da aplicação
APP_NAME=AI Agents Platform
VERSION=1.0.0
DEBUG=true

# Servidor
HOST=0.0.0.0
PORT=8000

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_agents_platform
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_agents_platform
POSTGRES_PORT=5432

# Segurança - CRÍTICO: Alterar em produção!
# SECRET_KEY será gerada automaticamente se não fornecida
# Para produção, gere uma chave segura: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Chave de criptografia para APIs - OBRIGATÓRIA em produção!
# Gere com: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# CORS - Configurações de segurança
# Em desenvolvimento, usar localhost/127.0.0.1
# Em produção, definir domínios específicos
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
# Apenas para produção - definir domínios reais
PRODUCTION_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com

# Webhooks de licenciamento
KIWIFY_WEBHOOK_SECRET=your-kiwify-webhook-secret
HOTMART_WEBHOOK_SECRET=your-hotmart-webhook-secret

# Redis
REDIS_URL=redis://localhost:6379

# Provedores de LLM
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# WhatsApp (Meta Cloud API)
META_WHATSAPP_TOKEN=your-meta-whatsapp-token
META_WHATSAPP_PHONE_ID=your-phone-number-id
META_WHATSAPP_VERIFY_TOKEN=your-verify-token

# Google Ads
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret

# Meta Ads
META_ADS_APP_ID=your-meta-ads-app-id
META_ADS_APP_SECRET=your-meta-ads-app-secret

# TikTok Ads
TIKTOK_ADS_APP_ID=your-tiktok-ads-app-id
TIKTOK_ADS_SECRET=your-tiktok-ads-secret
